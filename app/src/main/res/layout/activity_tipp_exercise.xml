<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lighter_purple"
    tools:context=".TippExerciseActivity">

    <TextView
        android:id="@+id/tipp_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/examples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:padding="12dp"
        android:layout_below="@+id/tipp_intro">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can for example: "
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/ex1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/ex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/ex3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/ex4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/ex5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/timer_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/examples"
        android:text="@string/timer"
        android:textAlignment="center"
        android:textSize="42sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/button_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/timer_textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />

    <ImageView
        android:id="@+id/button_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_below="@id/timer_textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_pause_circle_filled_black_24dp" />


    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:background="@color/medium_purple"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="startReflection"/>

</RelativeLayout>